<BoxContainer xmlns="https://spacestation14.io"
              xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
              HorizontalExpand="True"
              SetHeight="50"
              VerticalAlignment="Top">
    <controls:StripeBack HorizontalExpand="True"
                         VerticalExpand="True">
        <BoxContainer HorizontalExpand="True"
                      VerticalExpand="True"
                      Margin="15 0 0 0">
            <TextureRect Name="AppIcon"
                         TexturePath="/Textures/Interface/Nano/ntlogo.svg.png"
                         Stretch="KeepAspectCentered"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         SetWidth="32"
                         SetHeight="32"
                         Margin="0 3 10 0"/>
            <Label Text="NanoChat"
                   VerticalExpand="True"
                   SetWidth="120"
                   StyleClasses="LabelHeading" />
            <RichTextLabel Name="CurrentChatLabel"
                           Text="[font size=10]#4732[/font]"
                           Margin="0 0 0 0" />
            <Control HorizontalExpand="True"></Control>
            <BoxContainer Name="ActionButtonsContainer"
                          Margin="0 0 5 0"
                          Visible="False">
                <Button Name="GroupChatButton"
                        Text="G"
                        SetSize="35 35"
                        VerticalAlignment="Center"
                        StyleClasses="ButtonSquare"
                        Margin="1 4 1 2" />
                <Button Name="ToggleNotificationsButton"
                        Text="N"
                        SetSize="35 35"
                        VerticalAlignment="Center"
                        StyleClasses="ButtonSquare"
                        Margin="1 4 1 2" />
                <Button Name="CreateButton"
                        Text="C"
                        SetSize="35 35"
                        VerticalAlignment="Center"
                        StyleClasses="ButtonSquare"
                        Margin="1 4 1 2" />
                <Button Name="DeleteButton"
                        Text="D"
                        SetSize="35 35"
                        VerticalAlignment="Center"
                        StyleClasses="ButtonSquare"
                        Margin="1 4 1 2" />
                <Button Name="EditButton"
                        Text="E"
                        SetSize="35 35"
                        VerticalAlignment="Center"
                        StyleClasses="ButtonSquare"
                        Margin="1 4 1 2" />
                <Button Name="LookupButton"
                        Text="L"
                        SetSize="35 35"
                        VerticalAlignment="Center"
                        StyleClasses="ButtonSquare"
                        Margin="1 4 1 2" />
            </BoxContainer>
            <Button Name="ActionsToggleButton"
                    Text="A"
                    SetSize="35 35"
                    VerticalAlignment="Center"
                    StyleClasses="ButtonSquare"
                    Margin="1 4 1 2"
                    Pressed="False"/>
        </BoxContainer>
    </controls:StripeBack>
</BoxContainer>
